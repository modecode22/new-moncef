---
import { getCollection, getEntry } from 'astro:content';
import ProjectCard from './ProjectCard.astro';
const allProjects = await getCollection('projects');

---




<section class="dark:text-light-600 text-primary-700 min-h-screen w-full flex flex-col justify-center items-center">


  <main class="flex flex-col gap-6">
   {
        allProjects.map((project)=>{
            return <ProjectCard data={project.data} slug={project.slug}  /> 
        })
    }
  </main>

    <section class="flex flex-col items-center justify-center mt-10 gap-6">
        <p class="text-2xl w-full text-center">
Want to collaborate?          
</p>
        <a href="/contact" transition:name="contact" class="text-lg group transition-all duration-75  bg-primary-500 text-light-100  dark:text-dark-500 dark:hover:text-dark-950 hover:text-light-50 flex  w-full p-2 px-4  rounded-xl  justify-center items-center gap-2">
<p>Contact me </p>
            <svg xmlns="http://www.w3.org/2000/svg"
             width="20" height="20"
               class="transition-all fill-light-50 dark:fill-dark-900 opacity-0 group-hover:opacity-100 duration-75 delay-100 group-hover:rotate-12"
                viewBox="0 0 256 256"><path d="M224,96l-78.55,56h-34.9L32,96l96-64Z" opacity="0.2"></path><path d="M228.44,89.34l-96-64a8,8,0,0,0-8.88,0l-96,64A8,8,0,0,0,24,96V200a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V96A8,8,0,0,0,228.44,89.34ZM96.72,152,40,192V111.53Zm16.37,8h29.82l56.63,40H56.46Zm46.19-8L216,111.53V192ZM128,41.61l81.91,54.61-67,47.78H113.11l-67-47.78Z"></path></svg>
  </a>
    
    </section>

</section>